<nav>
  <ul class="primary">
    {% assign current = page.category %}

    {% for cat in site[current] %}
    {% assign numCat = cat | first | size %}
      
      {% if numCat != 0 %}
        
        {% for sec in cat %}
          {% assign sections = sec[forloop.index] %}
          {% assign item = sec[0]%}
          {% assign item_url = item | replace:' ','_' %}
          
          <li{% if page.title == item %} class="active"{% endif %}><a href="{{site.baseurl}}/{{current}}/{{item_url}}.html">{{item}}</a></li>
          
          

      {% else %}
        
        {% assign item = cat %}
        {% assign item_url = item | replace:' ','_' %}
        <li{% if page.title == item %} class="active"{% endif %}><a href="{{site.baseurl}}/{{current}}/{{item_url}}.html">{{item}}</a></li>    
      
      {% endif %}

    {% endfor %}
  </ul>
</nav>